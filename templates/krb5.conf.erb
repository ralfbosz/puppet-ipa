[libdefaults]
default_realm = <%= scope.lookupvar('::ipa::domain') %>

[realms]
  <%= scope.lookupvar('::ipa::domain') -%> = {
    kdc = <%= scope.lookupvar('::ipa::master') %>
    admin_server = <%= scope.lookupvar('::ipa::master') %>
	}

[logging]
    kdc = FILE:/var/log/krb5/krb5kdc.log
    admin_server = FILE:/var/log/krb5/kadmind.log
    default = SYSLOG:NOTICE:DAEMON
